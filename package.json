{
  "name": "collabboard",
  "private": true,
  "scripts": {
    "dev:client": "pnpm --filter @collabboard/client dev",
    "dev:server": "pnpm --filter @collabboard/server dev",
    "dev": "pnpm run --parallel dev:client dev:server",
    "build": "pnpm --filter @collabboard/shared build && pnpm --filter @collabboard/client build && pnpm --filter @collabboard/server build",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "prettier": "^3.5.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "canvas",
      "@firebase/util",
      "protobufjs"
    ]
  }
}
